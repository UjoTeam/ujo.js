{
  "compilerOptions": {
    "moduleResolution": "node",
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "strict": true,
    "declaration": true,
    "isolatedModules": false,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "jsx": "react",
    "target": "es5",
    "module": "commonjs",
    "lib": [
      "dom",
      "dom.iterable",
      "es2015",
      "es2015.iterable",
      "es2016",
      "es2017"
    ],
    "declarationDir": "dist/types",
    "typeRoots": [
      "node_modules/@types",
      "types"
    ]
  },
  "include": [
    "vynos",
    "types"
  ],
  "exclude": [
    "node_modules"
  ],
  "typeRoots": [
    "node_modules/@types",
    "types"
  ]
}
